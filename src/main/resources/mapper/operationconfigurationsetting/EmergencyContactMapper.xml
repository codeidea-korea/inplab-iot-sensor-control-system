    <sql id="rowOrder">
        <trim prefix="order by">
            <choose>
                <when test="'district_nm' == sidx and sidx != ''">
                    tdi.district_nm ${sord}
                </when>
<!--                <when test="'partner_comp_nm' == sidx and sidx != ''">-->
<!--                    .partner_comp_nm ${sord}-->
<!--                </when>-->
                <when test="'emerg_chgr_nm' == sidx and sidx != ''">
                    tec.emerg_chgr_nm ${sord}
                </when>
                <when test="'emerg_chgr_role' == sidx and sidx != ''">
                    tec.emerg_chgr_role ${sord}
                </when>
                <when test="'emerg_recv_ph' == sidx and sidx != ''">
                    tec.emerg_recv_ph ${sord}
                </when>
                <when test="'emerg_tel' == sidx and sidx != ''">
                    tec.emerg_tel ${sord}
                </when>
                <when test="'e_mail' == sidx and sidx != ''">
                    tec.e_mail ${sord}
                </when>
                <otherwise>
                    tec.reg_dt desc
                </otherwise>
            </choose>
        </trim>
    </sql>

    <select id="selectEmergencyContactList" parameterType="java.util.Map"
            resultType="com.safeone.dashboard.dto.operationconfigurationsetting.EmergencyContactDto">
        SELECT tec.mgnt_no
        , tec.district_no
        , tdi.district_nm
        -- , tec.partner_comp_nm
        , tec.emerg_chgr_nm
        , tec.emerg_chgr_role
        , tec.emerg_recv_ph
        , tec.emerg_tel
        , tec.e_mail
        , tec.reg_dt
        , tec.mod_dt
        FROM tb_emerg_contact tec
        LEFT OUTER JOIN tb_district_info tdi ON tec.district_no = tdi.district_no
        WHERE 1=1
        <include refid="rowSearch"/>
        <include refid="rowOrder"/>
        <if test="page != null and page > 0">
            limit #{rows}::int offset (#{page}::int - 1) * #{rows}::int
        </if>
    </select>

    <select id="selectEmergencyContactListTotal" parameterType="java.util.Map" resultType="int">
        SELECT count(tec.mgnt_no)
        FROM tb_emerg_contact tec
        LEFT OUTER JOIN tb_district_info tdi ON tec.district_no = tdi.district_no
        WHERE 1 = 1
        <include refid="rowSearch"/>
    </select>

    <insert id="insertEmergencyContact" parameterType="java.util.Map">
        INSERT INTO tb_maintenance ( maintenance_id
                                   , manager_name
                                   , manager_tel
                                   , description
                                   , reg_date
                                   , mt_date
                                   , asset_id
                                   , area_id
                                   , type
                                   , file1)
        SELECT COALESCE(max(maintenance_id::integer), 0) + 1 as maintenance_id
             , #{manager_name}
             , #{manager_tel}
             , #{description}
             , now()
             , #{mt_date}::timestamp
									          , #{asset_id_hid}
             , (select area_id from tb_zone where zone_id = #{zone_id_hid})
             , #{type_hid}
             , #{file1}
        FROM tb_maintenance
    </insert>

    <update id="updateEmergencyContact" parameterType="java.util.Map">
        update tb_maintenance set
        reg_date = now()
        <if test="manager_name != null">
            , manager_name = #{manager_name}
        </if>
        <if test="manager_tel != null">
            , manager_tel = #{manager_tel}
        </if>
        <if test="description != null">
            , description = #{description}
        </if>
        <if test="mt_date != null">
            , mt_date = #{mt_date}::timestamp
        </if>
        <if test="asset_id_hid != null and asset_id_hid != ''">
            , asset_id = #{asset_id_hid}
        </if>
        <if test="zone_id_hid != null and zone_id_hid != ''">
            , area_id = (select area_id from tb_zone where zone_id = #{zone_id_hid})
        </if>
        <if test="type_hid != null and type_hid != ''">
            , type = #{type_hid}
        </if>
        <if test="file1 != null">
            , file1 = #{file1}
        </if>
        where maintenance_id = #{maintenance_id}
    </update>

    <delete id="deleteEmergencyContact" parameterType="java.util.Map">
        DELETE
        FROM tb_maintenance
        WHERE maintenance_id = #{maintenance_id}
    </delete>
</mapper>