    <sql id="rowOrder">
        <trim prefix="order by">
            <choose>
                <!--                <when test="'send_group_id' == sidx and sidx != ''">-->
                <!--                    MG.send_group_id ${sord}-->
                <!--                </when>-->
                <!--                <when test="'send_group_name' == sidx and sidx != ''">-->
