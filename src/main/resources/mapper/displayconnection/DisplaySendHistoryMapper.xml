    <select id="getList" parameterType="java.util.Map"
            resultType="com.safeone.dashboard.dto.displayconnection.DisplaySendHistoryDto">
        SELECT tdd.mgnt_no
        , tdd.dispbd_no
        , tdispi.dispbd_nm
        , tdd.sms_trans_dt
        , tdi.district_nm
        , tdd.dispbd_evnt_flag
        , tdd.img_grp_nm as dispbd_group
        , case when tdd.dispbd_evnt_flag = '2' then 'Y' else 'N' end as dispbd_autosnd_yn
        , tdd.dispbd_rslt_yn
        , tdd.reg_dt
        FROM tb_dispbd_details_new tdd
        LEFT OUTER JOIN tb_dispboard_info tdispi ON tdd.dispbd_no = tdispi.dispbd_no
        LEFT OUTER JOIN tb_district_info tdi ON tdispi.district_no = tdi.district_no
        WHERE 1=1
        <include refid="rowSearch"/>
        <include refid="rowOrder"/>
        <if test="page != null and page > 0">
            limit #{rows}::int offset (#{page}::int - 1) * #{rows}::int
        </if>
    </select>

    <select id="getTotalCount" parameterType="java.util.Map" resultType="int">
        SELECT count(tdd.mgnt_no)
        FROM tb_dispbd_details_new tdd
        WHERE 1=1
        <include refid="rowSearch"/>
    </select>
</mapper>
